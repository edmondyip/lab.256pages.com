  $titleFont = 'Oswald', sans-serif
  $maxWidth = 64em
  $minWidth = 1200px
  $titleColor = #111111
  $contentColor = #666666
  $hoverColor = #000000

  #container
    // padding 10px
    width 1000px
    margin 0 auto
    position relative
    @media screen and (max-width $maxWidth)
      width calc(100vw - 40px)
      margin 0
    #three
      position fixed
      top 0
      bottom 0
      left 0
      right 0
      margin auto
      canvas
        width 100%
        height 100%
      