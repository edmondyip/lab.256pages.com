  :root
    --frameWidth: 40px
    --frameWidthx2: calc(var(--frameWidth) * 2)
  
  $titleFont = 'Oswald', sans-serif
  $maxWidth = 64em
  $minWidth = 1200px

  #container
    // padding 10px
    width 1000px
    margin 0 auto
    position relative
    @media screen and (max-width $maxWidth)
      width calc(100vw - var(--frameWidth)/2)
      margin 0
    #three
      transition .5s
      background #fff
      position fixed
      top 0
      bottom 0
      left 0
      right 0
    canvas
      width 100%
      height 100%
      